@page
@model RemitoModel
@{
    ViewData["Title"] = "Remitos";
}

<h2><i class="bi bi-archive"></i> Remitos</h2>

<form method="get" class="row g-2 mb-4">
    <div class="col-sm-10">
        <input type="text" name="Filtro" class="form-control" placeholder="Buscar por número, destino, serial, usuario, etc..." value="@Model.Filtro" />
    </div>
    <div class="col-sm-2">
        <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-search"></i> Buscar
        </button>
    </div>
</form>

<a asp-page="/CrearRemito" class="btn btn-success mb-3">
    <i class="bi bi-plus-circle"></i> Nuevo Remito
</a>

<table class="table table-striped table-hover table-bordered">
    <thead class="table-light">
        <tr>
            <th>Número</th>
            <th>Fecha</th>
            <th>Destino</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var remito in Model.Remitos)
        {
            <tr>
                <td>@remito.Numero</td>
                <td>@remito.Fecha.ToString("dd-MM-yyyy")</td>
                <td>@remito.Destino</td>
                <td>
                    <a asp-page="/VerDetalleRemito" asp-route-id="@remito.Id" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-eye"></i> Ver
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Paginación">
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= Model.TotalPaginas; i++)
        {
            <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                <a class="page-link" asp-page="Index" asp-route-pagina="@i">@i</a>
            </li>
        }
    </ul>
</nav>
