@page "{id:int}"
@model DetalleModel

@{
    ViewData["Title"] = "Detalle del Remito";
}

<button class="no-print btn btn-secondary mb-3" onclick="window.print()">
    <i class="bi bi-printer"></i> Imprimir
</button>

<div class="print-content">
    <div class="mb-4 p-3 border rounded bg-light">

        <div class="row align-items-center mb-2 encabezado">
            <!-- Logo -->
            <div class="col-md-3">
                <img src="~/pdf/logo.png" alt="Logo" style="max-height: 40px;" />
            </div>

            <!-- Letra R y tipo -->
            <div class="col-md-6 text-center">
                <div class="h3 fw-bold mb-1">R</div>
                <div class="small">Código identificatorio del Tipo de Comprobante: <strong>91</strong></div>
                <div class="text-uppercase small text-muted">Documento no válido como factura</div>
            </div>

            <!-- Número y fecha -->
            <div class="col-md-3 text-end small">
                <div><strong>Remito Interno N°:</strong> @Model.Remito.Numero</div>
                <div><strong>Fecha:</strong> @Model.Remito.Fecha.ToString("dd/MM/yyyy")</div>
            </div>
        </div>

        <hr class="my-2" />

        <!-- Datos del remitente -->
        <div class="row small datos-remitente">
            <div class="col-md-6">
                <strong>Aerolíneas Argentinas S.A.</strong><br />
                Aeroparque Jorge Newbery - Av. Costanera Rafael Obrigado S/N<br />
                CP 1425 - Ciudad Autónoma de Buenos Aires<br />
                Provincia de Bs. As.
            </div>
            <div class="col-md-6 text-end">
                <div>C.U.I.T N° 30-64140555-4</div>
                <div>ING. BRUTOS C.M. N° 901 - 179709-8</div>
                <div>INICIO DE ACTIVIDADES 01/11/1990</div>
                <div>IVA Responsable Inscripto</div>
            </div>
        </div>

        <!-- Destinatario / Transportista -->
        <div class="row small datos-destinatario">
            <div class="col-md-6">
                <strong>DESTINATARIO:</strong> Aerolíneas Argentinas S.A.<br />
                Dirección: Aeropuerto Internacional Ministro Pistarini - Planta Industrial Ezeiza<br />
                C.U.I.T: 30-64140555-4
            </div>
            <div class="col-md-6">
                <strong>TRANSPORTISTA:</strong> NA Nuevos Aires Logística<br />
                Domicilio: Gral Molina 296 Sarandí (1872) Bs. As.<br />
                C.U.I.T: 33-71243495-9
            </div>
        </div>
    </div>

