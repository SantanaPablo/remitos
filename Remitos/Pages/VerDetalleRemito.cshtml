        <p><strong>Número:</strong> @Model.Remito.Numero</p>
        <p><strong>Fecha:</strong> @Model.Remito.Fecha.ToString("dd-MM-yyyy")</p>
        <p><strong>Destino:</strong> @Model.Remito.Destino</p>
    </div> *@

 @*    <h4>Ítems</h4> *@
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Descripción</th>
                <th>Serial</th>
                <th>Usuario</th>
                <th>Cantidad</th>
                <th>Detalle</th>
                <th>Recibido Por</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.numero_item</td>
                    <td>@item.descripcion</td>
                    <td>@item.serial</td>
                    <td>@item.usuario</td>
                    <td>@item.cantidad</td>
                    <td>@item.detalle</td>
                    <td>@item.recibido_por</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-4 no-print">
