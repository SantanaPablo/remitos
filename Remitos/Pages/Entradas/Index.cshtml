@page
@model EntradasModel
@{
    ViewData["Title"] = "Notas de Entrada";
}
    <h2><i class="bi bi-journal-text"></i> Notas de Entrada</h2>

    <form method="get" class="row g-2 mb-4">
        <div class="col-sm-10">
            <input type="text" name="Filtro" class="form-control" placeholder="Buscar por técnico, destino, etc..." value="@Model.Filtro" />
        </div>
        <div class="col-sm-2">
            <button type="submit" class="btn btn-primary w-100"><i class="bi bi-search"></i> Buscar</button>
        </div>
    </form>

    <a asp-page="/Entradas/CrearEntrada" class="btn btn-success mb-3">
        <i class="bi bi-plus-circle"></i> Nueva Entrada
    </a>

    <table class="table table-striped table-hover table-bordered">
        <thead class="table-light">
            <tr>
                <th>Fecha</th>
                <th>Dirigido A</th>
                <th>Técnico</th>
                <th>Autorizante</th>
                <th colspan="2">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var nota in Model.Notas)
            {
                <tr>
                    <td>@nota.Fecha.ToString("dd-MM-yyyy")</td>
                    <td>@nota.DirigidaA</td>
                    <td>@nota.Tecnico</td>
                    <td>@nota.Autorizante?.Nombre</td>
                    @*  <td>
                    <form method="post" asp-page-handler="GenerarPdf">
                        <input type="hidden" name="notaId" value="@nota.Id" />
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="bi bi-file-earmark-pdf-fill"></i> PDF
                        </button>
                    </form>
                </td> *@
                    <td>
                        <a asp-page="/Entradas/VerEntrada" asp-route-id="@nota.Id" class="btn btn-outline-secondary">
                            <i class="bi bi-eye"></i> Ver
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Paginación">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPaginas; i++)
            {
                <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                    <a class="page-link" asp-page="Index" asp-route-pagina="@i">@i</a>
                </li>
            }
        </ul>
    </nav>