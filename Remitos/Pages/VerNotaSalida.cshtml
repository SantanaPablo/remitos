@page "{id:int}"
@model VerNotaSalidaModel
@{
    ViewData["Title"] = "Detalle de Nota de Salida";
}

<h2>Detalle de Nota de Salida</h2>

<div>
    <p><strong>Fecha:</strong> @Model.Nota.Fecha.ToString("dd-MM-yyyy")</p>
    <p><strong>Dirigido A:</strong> @Model.Nota.DirigidaA</p>
    <p><strong>Técnico:</strong> @Model.Nota.Tecnico</p>
    <p><strong>Autorizante:</strong> @Model.Usuario?.Nombre</p>
</div>

<h4>Ítems</h4>
<table class="table">
    <thead>
        <tr>
            <th>Unidad</th>
            <th>Equipo</th>
            <th>Serial</th>
            <th>Usuario</th>
            <th>SD</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Unidad</td>
                <td>@item.Equipo</td>
                <td>@item.Serial</td>
                <td>@item.Usuario</td>
                <td>@item.SD</td>
            </tr>
        }
    </tbody>
</table>

